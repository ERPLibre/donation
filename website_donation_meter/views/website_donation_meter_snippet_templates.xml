<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_donation_meter" name="Donation meter">
        <section class="donation_meter">
            <div class="container">
                <div class="row">
                    <!-- ref https://www.sitepoint.com/community/t/code-for-a-fundraising-thermometer/21832/4 -->
                    <div id="content col-lg-4 pt32 pb32 text-center">
                        <div id="thermometer">
                            <div class="track">
                                <div class="goal_donation">
                                    <div class="goal_donation_amount amount">90000</div>
                                </div>
                                <div class="progress_donation">
                                    <div class="progress_donation_amount amount">47835</div>
                                </div>
                            </div>
                            <div class="donation_error"/>
                        </div>
                    </div>
                    <div class="col-lg-4 pt32 pb32 text-center">
                        <div class="s_btn text-center pt16 pb16" data-name="Buttons">
                            <a id="don_100" class="btn btn-primary" data-original-title="" title="" aria-describedby="tooltip188274">
                                <font style="color: rgb(255, 255, 255);" data-original-title="" title="" aria-describedby="tooltip436788">100$</font>
                            </a>
                        </div>
                        <div class="s_btn text-center pt16 pb16" data-name="Buttons">
                            <a id="don_50" class="btn btn-primary" data-original-title="" title="" aria-describedby="tooltip188274">
                                <font style="color: rgb(255, 255, 255);" data-original-title="" title="" aria-describedby="tooltip436788">50$</font>
                            </a>
                        </div>
                        <div class="s_btn text-center pt16 pb16" data-name="Buttons">
                            <a id="don_20" class="btn btn-primary" data-original-title="" title="" aria-describedby="tooltip188274">
                                <font style="color: rgb(255, 255, 255);" data-original-title="" title="" aria-describedby="tooltip436788">20$</font>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4 pt32 pb32 text-center">
                        <div class="s_btn text-center pt16 pb16" data-name="Buttons">
                            <a id="don_10" class="btn btn-primary" data-original-title="" title="" aria-describedby="tooltip188274">
                                <font style="color: rgb(255, 255, 255);" data-original-title="" title="" aria-describedby="tooltip436788">10$</font>
                            </a>
                        </div>
                        <div class="s_btn text-center pt16 pb16" data-name="Buttons">
                            <a id="don_5" class="btn btn-primary" data-original-title="" title="" aria-describedby="tooltip188274">
                                <font style="color: rgb(255, 255, 255);" data-original-title="" title="" aria-describedby="tooltip436788">5$</font>
                            </a>
                        </div>
                        <div id="btn_don_other" class="s_btn text-center pt16 pb16" data-name="Buttons">
                            <a id="don_other" class="btn btn-primary" data-original-title="" title="" aria-describedby="tooltip188274">
                                <font style="color: rgb(255, 255, 255);" data-original-title="" title="" aria-describedby="tooltip436788">Autre montant</font>
                            </a>
                        </div>
                        <div id="btn_don_other_final">
                            <div class="css_quantity input-group mx-auto oe_website_spinner">
                                <div class="input-group-prepend">
                                    <a t-attf-href="#" class="btn btn-link js_add_cart_json d-none d-md-inline-block" aria-label="Remove one" title="Remove one">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                </div>
                                <input type="text" class="js_quantity form-control quantity" name="don_quantity" value="0"/>
                                <div class="input-group-append">
                                    <a t-attf-href="#" class="btn btn-link float_left js_add_cart_json d-none d-md-inline-block" aria-label="Add one" title="Add one">
                                        <i class="fa fa-plus"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="s_btn text-center pt16 pb16" data-name="Buttons">
                                <a id="don_other_final" class="btn btn-primary" data-original-title="" title="" aria-describedby="tooltip188274">
                                    <font id="a_don_other_final" style="color: rgb(255, 255, 255);" data-original-title="" title="" aria-describedby="tooltip436788">Faire un don de 0$</font>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="website_donation_meter_snippet" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_feature']//t[@t-snippet][last()]"
               position="after">
            <t t-snippet="website_donation_meter.s_donation_meter"
               t-thumbnail="/website_donation_meter/static/description/icon.png"/>
        </xpath>
    </template>

    <template id="donation_meter" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss"
                  href="/website_donation_meter/static/src/scss/website_donation_meter.scss"/>
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript"
                    src="/website_donation_meter/static/src/js/website.donation_meter.animation.js"/>
        </xpath>
    </template>
</odoo>
