<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_donation_meter" name="Donation meter">
        <section class="donation_meter" data-screen-name="OpenERP" data-limit="15">
            <!-- ref https://www.sitepoint.com/community/t/code-for-a-fundraising-thermometer/21832/4 -->
            <div id="content">
                <div id="thermometer">
                    <div class="track">
                        <div class="goal_donation">
                            <div class="goal_donation_amount amount">90000</div>
                        </div>
                        <div class="progress_donation">
                            <div class="progress_donation_amount amount">47835</div>
                        </div>
                    </div>
                    <div class="donation_error"/>
                </div>
            </div>
        </section>
    </template>

    <template id="website_donation_meter_snippet" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_feature']//t[@t-snippet][last()]"
               position="after">
            <t t-snippet="website_donation_meter.s_donation_meter"
               t-thumbnail="/website_donation_meter/static/description/icon.png"/>
        </xpath>
    </template>

    <template id="donation_meter" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss"
                  href="/website_donation_meter/static/src/scss/website_donation_meter.scss"/>
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript"
                    src="/website_donation_meter/static/src/js/website.donation_meter.animation.js"/>
        </xpath>
    </template>
</odoo>
